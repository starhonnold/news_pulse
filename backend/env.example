# News Pulse Backend Environment Configuration
# Конфигурация окружения для бэкенда "Пульс Новостей"

# =============================================================================
# CORE CONFIGURATION
# =============================================================================

# APPLICATION ENVIRONMENT
APP_ENV=production
LOG_LEVEL=info

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Settings
POSTGRES_HOST=postgres
POSTGRES_PORT=5433
POSTGRES_DB=news_pulse
POSTGRES_USER=news_pulse_user
POSTGRES_PASSWORD=news_pulse_secure_password_2024

# =============================================================================
# SERVICE PORTS CONFIGURATION
# =============================================================================

# API Gateway
API_GATEWAY_PORT=8080
API_GATEWAY_HTTPS_PORT=8443
API_GATEWAY_HEALTH_PORT=8090
API_GATEWAY_METRICS_PORT=9090

# News Parsing Service
NEWS_PARSING_PORT=8086
NEWS_PARSING_HEALTH_PORT=8096
NEWS_PARSING_METRICS_PORT=9096

# News Management Service
NEWS_MANAGEMENT_PORT=8082
NEWS_MANAGEMENT_HEALTH_PORT=8092
NEWS_MANAGEMENT_METRICS_PORT=9092

# Pulse Service
PULSE_SERVICE_PORT=8083
PULSE_SERVICE_HEALTH_PORT=8093
PULSE_SERVICE_METRICS_PORT=9093

# Notification Service
NOTIFICATION_SERVICE_PORT=8084
NOTIFICATION_SERVICE_HEALTH_PORT=8094
NOTIFICATION_SERVICE_METRICS_PORT=9094

# FastText Classification Service
FASTTEXT_SERVICE_PORT=8085

# Frontend
FRONTEND_HTTP_PORT=3000
FRONTEND_HTTPS_PORT=3443

# =============================================================================
# API GATEWAY CONFIGURATION
# =============================================================================

JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_ENABLED=false
RATE_LIMITING_ENABLED=false
CORS_ENABLED=true
WEBSOCKET_ENABLED=true

# =============================================================================
# RSS PARSING CONFIGURATION
# =============================================================================

RSS_PARSE_INTERVAL_MINUTES=10
RSS_MAX_CONCURRENT_PARSERS=5

# Proxy Configuration (optional)
PROXY_ENABLED=false
PROXY_URL=
PROXY_USERNAME=
PROXY_PASSWORD=

# =============================================================================
# NEWS MANAGEMENT CONFIGURATION
# =============================================================================

API_DEFAULT_PAGE_SIZE=20
API_MAX_PAGE_SIZE=100

# =============================================================================
# PULSE SERVICE CONFIGURATION
# =============================================================================

API_MAX_PULSES_PER_USER=10
API_MAX_NEWS_PER_FEED=100
PULSE_DEFAULT_REFRESH_INTERVAL=30

# =============================================================================
# CACHING CONFIGURATION
# =============================================================================

CACHE_ENABLED=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# ВАЖНО: Измените эти значения в production!

# POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
# JWT_SECRET=CHANGE_ME_IN_PRODUCTION_TO_VERY_LONG_RANDOM_STRING
