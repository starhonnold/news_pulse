# News Pulse Backend Environment Configuration
# Конфигурация окружения для бэкенда "Пульс Новостей"

# DATABASE CONFIGURATION
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=news_pulse
POSTGRES_USER=news_pulse_user
POSTGRES_PASSWORD=news_pulse_secure_password_2024
POSTGRES_SSL_MODE=disable

# DATABASE CONNECTION POOL
DB_MAX_CONNECTIONS=25
DB_MAX_IDLE_CONNECTIONS=10
DB_MAX_LIFETIME_MINUTES=60

# REDIS CONFIGURATION (для кеширования)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_CONNECTIONS=10

# PGADMIN CONFIGURATION (для разработки)
PGADMIN_EMAIL=admin@newspulse.local
PGADMIN_PASSWORD=admin123
PGADMIN_PORT=8080

# APPLICATION CONFIGURATION
APP_ENV=development
APP_PORT=8080
APP_HOST=0.0.0.0
APP_NAME="News Pulse API"
APP_VERSION=1.0.0

# LOGGING CONFIGURATION
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# RSS PARSING CONFIGURATION
RSS_PARSE_INTERVAL_MINUTES=10
RSS_REQUEST_TIMEOUT_SECONDS=30
RSS_MAX_CONCURRENT_PARSERS=5
RSS_USER_AGENT="NewsPulse/1.0 (+https://newspulse.local)"

# OPENAI API CONFIGURATION
OPENAI_API_KEY=your_openai_api_key_here

# AI MODEL SERVICE CONFIGURATION
AI_MODEL_SERVICE_PORT=8000
AI_MODEL_SERVICE_URL=http://ai-model-service:8000
AI_MODEL_NAME=IlyaGusev/mbart_ru_sum_gazeta
AI_CLASSIFICATION_ENABLED=true
AI_CONFIDENCE_THRESHOLD=0.5
AI_BATCH_SIZE=10
AI_TIMEOUT_SECONDS=30
AI_MAX_RETRIES=3

# NEWS RETENTION CONFIGURATION
NEWS_RETENTION_DAYS=90
NEWS_CLEANUP_INTERVAL_HOURS=24

# API RATE LIMITING
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_SIZE=20

# JWT AUTHENTICATION (для будущего использования)
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRY_HOURS=24
JWT_REFRESH_EXPIRY_DAYS=7

# SMS SERVICE CONFIGURATION (планируется)
SMS_PROVIDER=twilio
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret
SMS_FROM_NUMBER=+1234567890

# MONITORING AND METRICS
ENABLE_METRICS=true
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PORT=8081

# CORS CONFIGURATION
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With

# DEVELOPMENT SETTINGS
DEBUG_MODE=false
ENABLE_SQL_LOGGING=false
ENABLE_REQUEST_LOGGING=true

# PRODUCTION SETTINGS (изменить в production)
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_TO_VERY_LONG_RANDOM_STRING
SMS_API_KEY=CHANGE_ME_IN_PRODUCTION
SMS_API_SECRET=CHANGE_ME_IN_PRODUCTION

# BACKUP CONFIGURATION
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"  # Каждый день в 2:00
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=news-pulse-backups
BACKUP_S3_REGION=us-east-1
